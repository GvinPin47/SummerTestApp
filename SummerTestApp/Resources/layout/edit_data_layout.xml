<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        android:id="@+id/toolbar"
        layout="@layout/app_bar">
        </include>
    <RelativeLayout
        android:layout_below="@+id/toolbar"
        android:id="@+id/your_data"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/homepage_layouts_colors">
        <android.support.v7.widget.AppCompatTextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/home_page_data"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:textColor="@color/text_color"/>
        </RelativeLayout>
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/date_picker"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/your_data"
        android:src="@drawable/date_picker"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="150dp"
        android:layout_marginTop="10dp"
        />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/time_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/time_picker"
        android:layout_below="@+id/your_data"
        android:layout_toEndOf="@+id/date_picker"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"/>
     <android.support.v7.widget.AppCompatTextView
         android:id="@+id/data_text"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="дд.мм.год"
         android:lines="1"

         android:gravity="center"
         android:layout_below="@+id/date_picker"
         android:layout_alignStart="@+id/date_picker"
          />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="чч:мм"
     android:gravity="center"
        android:layout_below="@+id/time_picker"
        android:layout_alignStart="@+id/time_picker"
        android:layout_alignEnd="@+id/time_picker"
        />
    <RelativeLayout
        android:id="@+id/current_data"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/data_text"
        android:background="@color/homepage_layouts_colors">
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/home_page_current_data"
            android:layout_centerInParent="true"
            android:textColor="@color/text_color"/>
        </RelativeLayout>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/sig_per_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:layout_below="@+id/current_data"
        android:text="@string/sig_per_day"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"/>
    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/sig_per_day_count"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:hint="0.шт"
        android:gravity="center"
        android:layout_marginRight="10dp"
        android:textAlignment="center"
        android:layout_alignBaseline="@+id/sig_per_day"
        android:layout_alignBottom="@+id/sig_per_day"
        android:layout_alignParentEnd="true" />
    <android.support.v7.widget.AppCompatTextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:id="@+id/packet_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:layout_below="@+id/sig_per_day"
        android:text="@string/packet_price"
        android:textSize="15sp"/>
    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/packet_price_count"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginRight="10dp"
        android:hint="0.руб"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_below="@+id/sig_per_day_count"
        android:layout_alignParentEnd="true" />
    <android.support.v7.widget.AppCompatTextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:id="@+id/resin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:layout_below="@+id/packet_price"
        android:text="@string/resin"
        android:textSize="15dp"/>
    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/resin_count"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginRight="10dp"
        android:hint="0"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_below="@+id/packet_price_count"
        android:layout_alignParentEnd="true" />
    <android.support.v7.widget.AppCompatTextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:id="@+id/nicotine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:layout_below="@+id/resin"
        android:text="@string/nicotine"
        android:textSize="15sp"/>
    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/nicotine_count"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginRight="10dp"
        android:hint="0"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_below="@+id/resin_count"
        android:layout_alignParentEnd="true" />
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/save_toDb_button"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nicotine_count"
        android:text="@string/save_button"
        android:textAllCaps="false"
        android:backgroundTint="@color/homepage_layouts_colors"
        android:layout_alignStart="@+id/nicotine"
        android:layout_alignEnd="@+id/nicotine_count" />
    </RelativeLayout>